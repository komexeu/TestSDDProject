generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// 訂單主檔
model Order {
  /// 訂單唯一編號
  id          String       @id @default(uuid())
  /// 下單用戶 ID
  userId      String
  /// 訂單狀態（如：已點餐、可取餐、已取餐完成、已取消）
  status      String
  /// 訂單總金額（所有明細加總）
  totalAmount Int
  /// 建立時間
  createdAt   DateTime     @default(now())
  /// 最後更新時間
  updatedAt   DateTime     @updatedAt
  /// 訂單明細
  items       OrderItem[]
  /// 是否已刪除（軟刪除）
  isDelete    Boolean      @default(false)
}

// Prisma schema for 商品管理
model Product {
  /// 商品唯一編號（純數字字串）
  id          String         @id @default(uuid())
  /// 商品名稱（唯一）
  name        String         @unique
  /// 商品識別代號，可重複
  code        String?
  /// 商品描述
  description String
  /// 售價（新台幣整數，>0）
  price       Int
  /// 庫存數量（>=0）
  stock       Int            @default(0)
  /// 建立時間
  createdAt   DateTime       @default(now())
  /// 更新時間
  updatedAt   DateTime       @updatedAt
  /// 是否啟用
  isActive    Boolean        @default(true)
  /// 商品庫存異動紀錄
  logs        InventoryLog[]
  /// 訂單明細
  items       OrderItem[]
}

/// 訂單明細
model OrderItem {
  /// 明細唯一編號
  id        String   @id @default(uuid())
  /// 所屬訂單
  order     Order    @relation(fields: [orderId], references: [id])
  /// 訂單 id
  orderId   String
  /// 關聯商品
  product   Product  @relation(fields: [productId], references: [id])
  /// 商品 id
  productId String
  /// 商品名稱
  name      String
  /// 數量
  quantity  Int
  /// 商品單價
  price     Int
  /// 小計（單價*數量）
  totalPrice Int
}

model InventoryLog {
  /// 異動紀錄唯一編號
  id        String   @id @default(uuid())
  /// 關聯商品
  product   Product  @relation(fields: [productId], references: [id])
  /// 商品 id
  productId String
  /// 異動前庫存
  before    Int
  /// 異動後庫存
  after     Int
  /// 異動數量（after-before）
  delta     Int
  /// 異動原因
  reason    String
  /// 操作者
  operator  String
  /// 異動時間
  createdAt DateTime @default(now())
}

model Admin {
  /// 管理員唯一編號
  id   String @id @default(uuid())
  /// 管理員名稱
  name String
}
