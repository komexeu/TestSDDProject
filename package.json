{
  "name": "order-system-flow",
  "version": "0.1.0",
  "main": "dist/index.js",
  "scripts": {
    "test": "rm -f ./test.db && cross-env NODE_ENV=test dotenv -e .env.test npx prisma migrate deploy && cross-env NODE_ENV=test dotenv -e .env.test npx vitest run --dir=tests-vitest",
    "test:watch": "cross-env NODE_ENV=test dotenv -e .env.test npx vitest --dir=tests-vitest",
    "test:ui": "cross-env NODE_ENV=test dotenv -e .env.test npx vitest --ui --dir=tests-vitest",
    "resetDb": "npx prisma migrate reset --preview-feature",
    "build": "tsc && tsc-alias",
    "dev": "npm run build && node dist/src/server.js",
    "dev:debug": "npm run build && DEBUG=* node --inspect dist/src/server.js",
    "dev:watch": "tsc -w & sleep 2 && nodemon",
    "debug": "npm run build && node --inspect-brk dist/src/server.js",
    "start": "npm run build && node dist/src/server.js",
    "generate-tests": "node scripts/generate-test-structure.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@vitest/ui": "^4.0.4",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "drizzle-orm": "^0.44.6",
    "express": "^5.1.0",
    "hono": "^4.10.2",
    "husky": "^9.1.7",
    "nodemon": "^3.1.10",
    "prisma": "^6.1.0",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.4"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@prisma/client": "^6.1.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "fast-glob": "^3.3.3",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0"
  }
}
